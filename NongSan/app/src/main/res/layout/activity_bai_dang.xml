<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BaiDangActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarbaidang"
        app:title="Bài Đăng"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        />
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ViewFlipper
                android:background="@drawable/background"
                android:id="@+id/viewflipper"
                android:layout_height="200dp"
                android:layout_width="match_parent"
                >
                <ImageView
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:id="@+id/imagebaidang"
                    >
                </ImageView>
            </ViewFlipper>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <EditText
                    android:textColorHint="#2196F3"
                    android:background="@drawable/cssinput"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:id="@+id/edtBaidang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tên Bài Đăng"
                    />
                <EditText
                    android:textColorHint="#2196F3"
                    android:background="@drawable/cssinput"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:id="@+id/edtGia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Giá Sản Phẩm"
                    />
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <Spinner
                        android:layout_weight="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/SpLoai"
                        />
                    <Spinner
                        android:layout_weight="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/SpDonvitinh"
                        />
                </LinearLayout>
                <EditText
                    android:lines="5"
                    android:textColorHint="#2196F3"
                    android:background="@drawable/cssinput"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:textSize="17dp"
                    android:id="@+id/edtNoidung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nội Dung"
                    />
                <Button
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button"
                    android:textSize="20dp"
                    android:text="Đăng Bài"
                    android:padding="3dp"
                    android:id="@+id/btndangbai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>
<!--        <com.google.android.material.navigation.NavigationView-->
<!--            android:id="@+id/navigation"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_gravity="start"-->
<!--            >-->
<!--        </com.google.android.material.navigation.NavigationView>-->
    </androidx.drawerlayout.widget.DrawerLayout>
</LinearLayout>