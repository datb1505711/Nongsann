<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChitietbaidangActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:title="Chi tiết bài đăng"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        />
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/imageChiTietBaiDang"
                android:src="@drawable/background"
                android:layout_height="200dp"
                android:layout_width="match_parent"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:drawableLeft="@drawable/loai"
                    android:paddingLeft="2dp"
                    android:id="@+id/txtChiTietTenBaiDang"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:text="Ten bai dang"
                    android:layout_width="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:drawableLeft="@drawable/city"
                        android:paddingLeft="2dp"
                        android:id="@+id/txtChiTietTinhThanh"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        android:text="Tinh thanh"
                        android:layout_width="match_parent"
                        />
                    <TextView
                        android:drawableLeft="@drawable/call"
                        android:paddingLeft="2dp"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:id="@+id/txtChiTietSdt"
                        android:textSize="18dp"
                        android:text="So dien thoai"
                        android:layout_width="match_parent"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_weight="6"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="50sp"
                        android:drawableRight="@drawable/msg"
                        android:gravity="center"
                        android:background="@drawable/cssinput"
                        android:textStyle="bold"
                        android:padding="10sp"
                        android:id="@+id/txtChat"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        android:text="Chat"
                        android:layout_width="match_parent"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_weight="5"
                    android:drawableLeft="@drawable/loai"
                    android:id="@+id/txtLoaiSanPhamChiTiet"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:text="Loai san pham"
                    android:layout_width="match_parent"
                    />
                <TextView
                    android:layout_weight="5"
                    android:drawableLeft="@drawable/loai"
                    android:id="@+id/txtKhoiLuongChiTiet"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:text="Khoi luong"
                    android:layout_width="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_weight="3"
                    android:drawableLeft="@drawable/date"
                    android:id="@+id/txtChiTietNgayDang"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:text="Ngay dang"
                    android:layout_width="match_parent"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:gravity="center"
                    android:lines="10"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:id="@+id/txtMoTaChiTiet"
                    android:text="Mo ta"
                    android:layout_width="match_parent"
                    />
            </LinearLayout>
        </LinearLayout>
        </ScrollView>
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            >

        </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        app:menu="@menu/bottomnavigation"
        android:layout_width="match_parent"
        >
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</LinearLayout>
